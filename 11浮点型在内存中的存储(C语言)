//浮点型在内存中的存储
#include<stdio.h>
//int main()
//{
//	double d = 1E10;
//	printf("%lf",d);
//	return 0;
//}

int main()
{
	int n = 9;
	//00000000000000000000000000001001 -补码
	//
	float* pFloat = (float*)&n;
	printf("n的值为：%d\n", n);//9
	
	printf("*pFloat的值为：%f\n", *pFloat);//0.000000
	//0 00000000 00000000000000000001001 - 补码
	//s E        M
	//(-1)^0* 0.00000000000000000001001 * 2^-126
	//(-1)^0* 0.00000000000000000001001 * 2^-126 - E为全0，此时读取M时不再加1，而直接读0

	*pFloat = 9.0;
	//1001.0
	//(-1)^0*1.001*2^3
	//(-1)^s*M    *2^E
	//s - 符号位
	//M - 有效位 - 1<=M<2
	//E - 指数位
	//0 10000010 00100000000000000000000
	printf("num的值为：%d\n", n);//01000001000100000000000000000000 - 1091567616
	printf("pFloat的值为：%f\n", *pFloat);//9.0
	return 0;
}
