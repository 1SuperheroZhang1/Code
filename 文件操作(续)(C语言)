struct S {
    char name[20];
    int age;
    double score;
};
int main()
{
    //struct S s = { "张三",20,89 };
    struct S tmp = {0};
    FILE* pf = fopen("text.txt", "rb");
    if (pf == NULL)
    {
        return 0;
    }
    //二进制的形式读文件
    fread(&tmp, sizeof(struct S), 1, pf);
    printf("%s %d %lf\n",tmp.name,tmp.age,tmp.score);
    //关闭文件
    fclose(pf);
    pf = NULL;
    return 0;
}
